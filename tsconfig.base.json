{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowJs": false,
    "strict": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@simplegov/ui": ["packages/ui/src"],
      "@simplegov/lib": ["packages/lib/src/index"],
      "@simplegov/lib/*": ["packages/lib/src/*"]
    }
  },
  "include": []
}
